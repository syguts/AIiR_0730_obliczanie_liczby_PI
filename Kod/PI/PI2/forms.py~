#Klasa obslugi zlecenia zadania
class CommisionTask(forms.ModelForm):
    
    numberOfPoints = forms.IntegerField(label ="")
    numberOfThreads = forms.IntegerField(label ="")

    class Meta:
        model = Task
        fields = ('numberOfPoints', 'numberOfThreads' ) 
        
  
        
        
